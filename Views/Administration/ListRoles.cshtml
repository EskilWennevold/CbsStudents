@model IEnumerable<IdentityRole>


<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Create" asp-controller="Administration">Add New Roles</a>

    foreach(var item in Model)
    {
        <div class="card mb-3">
        <div class="card-header">
            Role Id: @item.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
        </div>
        <div class="card-footer">
            <a asp-controller="administration" asp-route-id="@item.Id" asp-action="EditRole" class="btn btn-primary">Edit</a>
        </div>

    </div>
    }

} else {
    <div class="card">
        <div class="card-header">
            No roles created
        </div>
        <div class="card-body">
            <h5>
                Use button below to create roles
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="Create">

            </a>
        </div>

    </div>
}