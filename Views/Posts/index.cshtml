@model PostIndexVm

@{
    ViewData["Title"] = "Index";
}

<div class="container" >
    <div class="row">
    <div class="col">
        <div class= "row">
            <div class= "col-sm-10">
        
            </div>
            <div class="col-sm-2">
                <a asp-action="Create">Create New</a>
            </div>
        </div>
        <form asp-controller="Posts" asp-action="Index">
            <p>
                Title: <input type="text" name="SearchString" value = "@ViewBag.SearchString"/>
                <input type="submit" value="Filter" />
            </p>
        </form>
        <div class="row">

            <div class="col">
                @Html.DisplayNameFor(model => model.Posts.FirstOrDefault().Title)
            </div>
            <div class="col">
                @Html.DisplayNameFor(model => model.Posts.FirstOrDefault().Text)
            </div>
            <div class="col">
                @Html.DisplayNameFor(model => model.Posts.FirstOrDefault().Created)
            </div>
            <div class="col">
                @Html.DisplayNameFor(model => model.Posts.FirstOrDefault().Status)
            </div>
            <div class= "col"></div>
        </div>
@foreach (var item in Model.Posts)
{
    <div class="row">
        <div class="col">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col">
                @Html.DisplayFor(modelItem => item.Text)
            </div>
            <div class="col">
                @Html.DisplayFor(modelItem => item.Created)
            </div>
            <div class="col">
                @Html.DisplayFor(modelItem => item.Status)
            </div>
            <div class="col">
                <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </div>
        </div>
}
    </div>
  </div>
</div>